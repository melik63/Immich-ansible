apiVersion: apps/v1
kind: Deployment
meta
  name: immich-api
spec:
  replicas: 1
  selector:
    matchLabels:
      app: immich-api
  template:
    meta
      labels:
        app: immich-api
    spec:
      containers:
        - name: api
          image: "{{ immich_api_image }}"
          ports:
            - containerPort: {{ immich_api_port }}
          envFrom:
            - configMapRef:
                name: immich-env-config
          volumeMounts:
            - name: data-storage
              mountPath: {{ immich_storage_path }}
            - name: upload-storage
              mountPath: {{ immich_upload_path }}
          resources:
            requests:
              memory: "{{ immich_api_resources.requests.memory }}"
              cpu: "{{ immich_api_resources.requests.cpu }}"
            limits:
              memory: "{{ immich_api_resources.limits.memory }}"
              cpu: "{{ immich_api_resources.limits.cpu }}"
      volumes:
        - name: data-storage
          persistentVolumeClaim:
            claimName: immich-data-pvc
        - name: upload-storage
          persistentVolumeClaim:
            claimName: immich-upload-pvc
---
